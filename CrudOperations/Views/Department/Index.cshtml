@model IEnumerable<CrudOperations.Models.Department>

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.DeptId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.DeptId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DeptId">Delete</a>   
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
